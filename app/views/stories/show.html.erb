<div class="page-header">
  <%= link_to stories_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_story_path(@story), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <%= link_to @story, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-trash"></span>
    Delete
  <% end %>
  <h1>Show story</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @story.title %></dd>

  <dt>Url link:</dt>
  <dd><%= @story.url_link %></dd>

  <dt>Email:</dt>
  <dd><%= @story.email %></dd>
</dl>
