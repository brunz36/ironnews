<div class="page-header well">
  <!-- <%= link_to new_story_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Story
  <% end %> -->
  <h1 Listing>The Iron Stories</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="text-center">#</th>
        <th>Title</th>
        <!-- <th>Url link</th> -->
        <th>Email</th>
        <th>Created @ Time</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @stories.each.with_index do |story, index| %>
        <tr>
          <td class="text-center"><%= index + 1 %></td>
          <td><%= link_to story.title, story.url_link %></td>
          <!-- <td><%= story.title %></td> -->
          <!-- <td><%= story.url_link %></td> -->
          <td><%= story.email %></td>
          <td><%= distance_of_time_in_words(Time.now - story.created_at) %></td>
          <td>
            <%= link_to story do %>
              <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
            <% end %>
          </td>
          <!-- <td>
            <%= link_to edit_story_path(story) do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
          </td>
          <td>
            <%= link_to story, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <% end %>
          </td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="well text-center">
    <div><%= paginate @stories %></div>
    <div><%= page_entries_info @stories %></div>
  </div>
</div>
