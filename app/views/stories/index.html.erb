<div class="media well">
  <div class="media-left">
    <div class="media-object">
      <%= image_tag("tiy_logo_1.png", size: "100") %>
    </div>
  </div>
  <div class="media-body">
    <h1 class="pull-right">The Iron Stories</h1>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="text-center">#</th>
        <th>Title</th>
        <!-- <th>Url link</th> -->
        <th>Email</th>
        <th>Created @ Time</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <% @stories.each.with_index do |story, index| %>
        <tr>
          <td class="text-center"><%= index + 1 %></td>
          <td class="lead"><%= link_to story.title, story.url_link %></td>
          <td><%= story.email %></td>
          <td><%= distance_of_time_in_words(Time.now - story.created_at) %></td>
          <td>
            <%= link_to story do %>
              <span class="btn btn-default">Edit Post</span>
            <% end %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="well text-center">
    <div><%= paginate @stories %></div>
    <div><%= page_entries_info @stories %></div>
  </div>
</div>
