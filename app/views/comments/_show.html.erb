<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Story</th>
        <th>Body</th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @comments.each do |comment| %>
      <tr>
        <td><%= comment.story_id %></td>
        <td><%= comment.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
